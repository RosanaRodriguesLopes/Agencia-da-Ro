@model IEnumerable<AgDeViagem.Models.Promoção>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Desconto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_Final)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Desconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Final)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Promoção">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Promoção">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Promoção">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
